<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.kudladev.auth.login.LoginController">
   <children>
      <BorderPane layoutX="174.0" layoutY="85.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Login">
                     <font>
                        <Font name="System Bold" size="35.0" />
                     </font>
                  </Label>
                  <TextField fx:id="UsernameLoginTextField" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="PasswordLoginTextField" promptText="Password">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </VBox.margin>
                  </TextField>
                  <CheckBox fx:id="RememberMeCheckBox" mnemonicParsing="false" text="Remember me" />
                  <Label fx:id="ErrorMessageLabel" textFill="RED" />
                  <Button fx:id="LoginButton" mnemonicParsing="false" onAction="#onLoginClicked" text="Login" />
               </children>
            </VBox>
         </center></BorderPane>
   </children>
</AnchorPane>
